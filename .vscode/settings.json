{
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintArgs": ["--load-plugins", "pylint_django"],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "**/migrations/**/*.py",
        "venv",
        "venvtest"
    ],
    "python.venvFolders": [
        "envs",
        "venvtest",
        ".pyenv",
        ".direnv"
      ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "venv": true,
        "venvtest": true
    },
    "python.pythonPath": "${workspaceFolder}/venvtest/bin/python"
}