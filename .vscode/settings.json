{
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintArgs": ["--load-plugins", "pylint_django"],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "**/migrations/**/*.py",
        "venv"
    ],
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".direnv"
      ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "venv": true
    }
}